{
  "name": "youversion-desktop",
  "version": "1.0.0",
  "description": "A desktop client for YouVersion Holy Bible",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "lint": "eslint -c .eslintrc --ext .ts ./src",
    "start": "npm run build && electron ./dist/main.js",
    "clean:linux": "rimraf build/youversion-desktop-linux-x64",
    "clean:win": "rimraf build/youversion-desktop-win32-x64",
    "bundle:linux64": "electron-packager . youversion-desktop --asar --overwrite --platform=linux --arch=x64 --icon=assets/icons/Icon.png --prune=true --out=build/",
    "bundle:win64": "electron-packager . youversion-desktop --asar --overwrite --platform=win32 --arch=x64 --icon=assets/icons/Icon.ico --prune=true --out=build/",
    "deb:x64": "electron-installer-debian --src build/youversion-desktop-linux-x64/ --dest build/youversion-desktop-linux-x64/installer/ --arch amd64 --config config-linux-build.json",
    "exe:x64": "electron-installer-windows --src build/youversion-desktop-win32-x64/ --dest build/youversion-desktop-win32-x64/installer/ --config config-win-build.json",
    "dist:linux": "npm run clean:linux && npm run build && npm run bundle:linux64 && npm run deb:x64",
    "dist:win": "npm run clean:win && npm run build && npm run bundle:win64 && npm run exe:x64"
  },
  "repository": "https://github.com/lucianobritodev/YouVersion-Desktop",
  "keywords": [
    "notion",
    "tasks",
    "todo",
    "list",
    "project"
  ],
  "author": "Luciano Brito",
  "license": "MIT",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "electron": "^22.2.0",
    "electron-installer-debian": "^3.1.0",
    "electron-installer-windows": "^3.0.0",
    "electron-packager": "^17.1.1",
    "eslint": "^7.32.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.8.3"
  }
}
